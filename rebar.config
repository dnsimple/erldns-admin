{minimum_otp_vsn, "27"}.

{erl_opts, [
    debug_info,
    fail_on_warning,
    {parse_transform, lager_transform}
]}.

{project_plugins, [
    {rebar3_depup, "~> 0.4"},
    {rebar3_hex, "~> 7.0"},
    {rebar3_lint, "~> 3.2"},
    {rebar3_ex_doc, "~> 0.2"},
    {erlfmt, "~> 1.6"}
]}.

{deps, [
    cowboy,
    dns_erlang,
    erldns
]}.

{hex, [{doc, #{provider => ex_doc}}]}.

{ex_doc, [
    {source_url, <<"https://github.com/dnsimple/erldns-admin">>},
    {main, <<"readme">>},
    {extras, [
        {'README.md', #{title => <<"Overview">>}}
    ]}
]}.

{erlfmt, [
    write,
    {files, [
        "src/**/*.{hrl,erl,app.src}",
        "rebar.config"
    ]}
]}.

{elvis, [
    #{
        dirs => ["src"],
        filter => "*.erl",
        ruleset => erl_files
    },
    #{
        dirs => ["."],
        filter => "rebar.config",
        ruleset => rebar_config
    }
]}.
